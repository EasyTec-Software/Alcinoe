<?xml version="1.0" encoding="utf-8"?>
<resources>
 
  <style name="Theme.App.Material.Dialog.Alert" parent="@android:style/Theme.Material.Light.Dialog.Alert">
    <item name="android:datePickerStyle">@style/Widget.App.Material.DatePicker</item>
    <item name="android:colorAccent">#ff8f99cd</item>
  </style>
 
  <style name="Widget.App.Material.DatePicker" parent="@android:style/Widget.Material.Light.DatePicker">
    <item name="android:datePickerMode">spinner</item>
  </style>
 
  <style name="Material.Edit.Filled" parent="@android:style/Widget.Material.Light.EditText">
    <item name="android:background">@null</item>   
    <item name="android:textCursorDrawable">@drawable/text_cursor_mtrl3_light_filled</item> 
    <item name="android:textColorHighlight">#666750A4</item>
    <item name="android:textSelectHandle">@drawable/text_select_handle_middle_mtrl3_light_filled</item>
    <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left_mtrl3_light_filled</item>
    <item name="android:textSelectHandleRight">@drawable/text_select_handle_right_mtrl3_light_filled</item>
  </style>
  
  <style name="Material.Edit.Outlined" parent="@android:style/Widget.Material.Light.EditText">
    <item name="android:background">@null</item>   
    <item name="android:textCursorDrawable">@drawable/text_cursor_mtrl3_light_outlined</item> 
    <item name="android:textColorHighlight">#666750A4</item>
    <item name="android:textSelectHandle">@drawable/text_select_handle_middle_mtrl3_light_outlined</item>
    <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left_mtrl3_light_outlined</item>
    <item name="android:textSelectHandleRight">@drawable/text_select_handle_right_mtrl3_light_outlined</item>
  </style>
    
  <style name="Material.Edit.Filled.Error" parent="@android:style/Widget.Material.Light.EditText">
    <item name="android:background">@null</item>   
    <item name="android:textCursorDrawable">@drawable/text_cursor_mtrl3_light_filled_error</item> 
    <item name="android:textColorHighlight">#66B3261E</item>
    <item name="android:textSelectHandle">@drawable/text_select_handle_middle_mtrl3_light_filled_error</item>
    <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left_mtrl3_light_filled_error</item>
    <item name="android:textSelectHandleRight">@drawable/text_select_handle_right_mtrl3_light_filled_error</item>
  </style>
  
  <style name="Material.Edit.Outlined.Error" parent="@android:style/Widget.Material.Light.EditText">
    <item name="android:background">@null</item>   
    <item name="android:textCursorDrawable">@drawable/text_cursor_mtrl3_light_outlined_error</item> 
    <item name="android:textColorHighlight">#66B3261E</item>
    <item name="android:textSelectHandle">@drawable/text_select_handle_middle_mtrl3_light_outlined_error</item>
    <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left_mtrl3_light_outlined_error</item>
    <item name="android:textSelectHandleRight">@drawable/text_select_handle_right_mtrl3_light_outlined_error</item>
  </style>
  
  <style name="Theme.App" parent="Theme.AppCompat.DayNight"> 
    <item name="android:windowBackground">@drawable/splashscreen</item>
    <item name="MaterialEditFilled">@style/Material.Edit.Filled</item>
    <item name="MaterialEditOutlined">@style/Material.Edit.Outlined</item>
    <item name="MaterialEditFilledError">@style/Material.Edit.Filled.Error</item>
    <item name="MaterialEditOutlinedError">@style/Material.Edit.Outlined.Error</item>
    <item name="android:datePickerDialogTheme">@style/Theme.App.Material.Dialog.Alert</item>
  </style>
                
</resources>
